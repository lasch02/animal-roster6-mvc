@using AnimalRoster6.Models;
@model List<Animal>

<h1>Our Animals</h1>
@if (ViewBag.animals.Count == 0)
{
    <h2>You don't have any animals! Go and add some to the roster, dude.</h2>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th scope="col">
                Id
            </th>
            
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Species
            </th>
            <th scope="col">
                Description
            </th>
            <th scope="col">
                Image Link
            </th>
        </tr>
        @foreach (Animal animal in Model)
        {
            <tr>
                <td>@animal.Name</td>
                <td>@animal.Species</td>
                <td>@animal.Description</td>
                <td><a href="@animal.ImgUrl"> Check me out! </a></td>
            </tr>
        }
    </table>
}